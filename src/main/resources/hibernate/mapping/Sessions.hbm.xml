<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
  <class table="sessions"  
         name="domain.Sessions"> <!-- lazy="false"-->
    <id column="id" 
        name="sessionsId" 
        type="java.lang.Integer">
      <generator class="native"/>
    </id>
<!--     org.jadira.usertype.dateandtime.joda.PersistentDateTime -->
    <property column="sessions_date" 
              name="sessionsTime" 
              type="java.util.Calendar"/> 
<!--               "java.util.Calendar" -->
    <many-to-one column="film_id" 
                 name="sessionsFilm" 
                 class="domain.Film"/> <!-- cascade="all"--> <!--not-null="true" insert="true" -->
    </class>
</hibernate-mapping>